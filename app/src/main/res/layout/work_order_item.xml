<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".app.app.workOrders.WorkOrderListActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom"
    android:paddingBottom="5dp"
    android:paddingTop="15dp"
    android:orientation="horizontal">

        <LinearLayout
            android:layout_width="735dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/work_order_title"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/work_order_priority"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/work_order_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/work_order_work_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />


            </LinearLayout>


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:valueText="TextView"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/order_type"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                app:valueText="TextView"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/order_inspection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:valueText="@string/work_orders_quality_inspection"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/order_material_shortage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:valueText="@string/work_orders_material_shortage"
                android:textSize="12sp" />

            <com.akso.realwear.app.app.CustomProgressBar
                android:id="@+id/order_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progressDrawable="@drawable/custom_progress_bar"
                android:layout_marginEnd="10dp"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</layout>